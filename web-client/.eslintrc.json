{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true,
    "mongo": true
  },
  "extends": [
    "react-app",
    "prettier",
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 11,
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react",
    "prettier"
  ],
  "rules": {
    "react/display-name": "off",
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off",
    "semi": "off",
    "no-useless-concat": "off",
    "no-unused-vars": "off"
  },
  "globals": {
    "React": "writable"
  }
}